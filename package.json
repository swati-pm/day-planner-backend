{
  "name": "day-planner-backend",
  "version": "1.0.0",
  "description": "Backend API for day-planner application using Express, TypeScript, and SQLite",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "db:init": "ts-node src/database/init.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up -d --build",
    "docker:dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:dev:logs:api": "docker-compose -f docker-compose.dev.yml logs -f day-planner-backend-dev",
    "docker:dev:shell": "docker-compose -f docker-compose.dev.yml exec day-planner-backend-dev sh",
    "docker:dev:restart": "docker-compose -f docker-compose.dev.yml restart",
    "docker:clean": "docker-compose -f docker-compose.dev.yml down -v && docker-compose down -v"
  },
  "dependencies": {
    "express": "^4.18.2",
    "@libsql/client": "^0.4.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.10",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "keywords": ["express", "typescript", "sqlite", "day-planner", "api"],
  "author": "",
  "license": "MIT"
}
