{
  "name": "day-planner-backend",
  "version": "1.0.0",
  "description": "Backend API for day-planner application using Express, TypeScript, and SQLite",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "db:init": "ts-node src/database/init.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up -d --build",
    "docker:dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:dev:logs:api": "docker-compose -f docker-compose.dev.yml logs -f day-planner-backend-dev",
    "docker:dev:shell": "docker-compose -f docker-compose.dev.yml exec day-planner-backend-dev sh",
    "docker:dev:restart": "docker-compose -f docker-compose.dev.yml restart",
    "docker:clean": "docker-compose -f docker-compose.dev.yml down -v && docker-compose down -v",
    "docker:build:amd64": "docker build --platform linux/amd64 -t day-planner-backend:latest .",
    "docker:build:deploy": "docker build --platform linux/amd64 -t day-planner-backend:deploy .",
    "docker:buildx:deploy": "docker buildx build --platform linux/amd64 --load -t day-planner-backend:deploy ."
  },
  "dependencies": {
    "@libsql/client": "^0.4.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "google-auth-library": "^9.15.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.8.10",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "express",
    "typescript",
    "sqlite",
    "day-planner",
    "api"
  ],
  "author": "",
  "license": "MIT"
}
